<div class="page-header">
<h1><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>編集するページ</h1>
</div>
<%= form_for(@book,html: {role:"form"}) do |f| %>

   
  <div class=:"form-group">
      <%= f.label :タイトル %><br>      
      <%= f.text_field :name,class:"form-control" %>
  </div>

  <div class:"form-group">
      <%= f.label :読んだ日 %><br>      
      <%= f.text_field :date,class:"form-control" %>
  </div>
  
  
  <div class:"form-group">
      <%= f.label :評価（☆マーク） %><br>     
      <%= f.text_field :star,class:"form-control" %>
  </div>
  
  <div class:"form-group">
      <%= f.label :感想 %><br>      
      <%= f.text_area :impression,class:"form-control", cols: 40, rows: 20 %>
  </div>
  
  
  <div class:"form-group">
      <%= f.submit '編集する', class: "btn btn-default",role: "button" %>
      <%= link_to '編集せずに戻る', books_path(id:@book.id), target: "_brank", class: "btn btn-default",role: "button" %>
      <%= link_to '削除', book_path, method: :delete, data: { confirm: 'Really?'}, class: "btn btn-danger",role: "button"%> 
  </div>
  <% end %>
    
   