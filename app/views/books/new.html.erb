<div class="page-header">
  <h1><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> 登録ページ</h1>
</div>  

<%= form_for(@book,html: {role:"form"}) do |f| %>


  <div class:"form-group">
      <%= f.label :タイトル %><br>      
      <%= f.text_field :name,class:"form-control" %>
  </div>

  <div class:"form-group">
      <%= f.label :読んだ日 %><br>      
      <%= f.text_field :date,class:"form-control" %>
  </div>
  
  
  <div class:"form-group">
      <%= f.label :評価（☆マーク） %><br>     
      <%= f.text_field :star,class:"form-control" %>
  </div>
  
  <div class:"form-group">
      <%= f.label :感想 %><br>      
      <%= f.text_area :impression,class:"form-control", cols: 40, rows: 20 %>
  </div>
  
  
  <div class="actions">
      <%= f.submit '登録',class: "btn btn-default",role: "button" %>
      <%=link_to 'トップに戻る', books_path,class: "btn btn-default",role: "button" %> 
  <% end %>
    
    