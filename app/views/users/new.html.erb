<div class="page-header">
  <h1><span class="glyphicon glyphicon-user" aria-hidden="true"></span> ユーザー登録</h1>
</div>  

<%= form_for(@user,html: {role:"form"}) do |f| %>


  <div class:"form-group">
      <%= f.label :ユーザー名 %><br>      
      <%= text_field_tag :name, params[:name], class:"form-control"  %>
  </div>

  <div class:"form-group">
      <%= f.label :パスワード %><br>      
      <%= text_field_tag :password_digest, params[:password_digest], class:"form-control" %>
  </div>
  
  
  
  
  
  <div class="actions">
      <%= f.submit '登録',class: "btn btn-default",role: "button" %>
      <%=link_to 'トップに戻る', users_path,class: "btn btn-defaul" %>
  <% end %>    